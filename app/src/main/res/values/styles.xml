<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_primary</item>
        <item name="colorPrimaryDark">@color/bg_primary_deep</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <!--启动闪屏页主题-->
    <style name="AppThemeForSplashActivity" parent="AppThemeBase">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--全屏无标题透明背景窗体主题-->
    <style name="TranslucentFullScreen" parent="AppThemeBase">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--淡入淡出动效activity主题-->
    <style name="GradientActivity" mce_bogus="1" parent="AppThemeBase">
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle</item>
    </style>

    <style name="ActivityAnimationStyle" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_gradient_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_gradient_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_gradient_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_gradient_out</item>
    </style>
</resources>
